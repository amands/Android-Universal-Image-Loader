<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.00"
        android:gravity="center"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tvJvJoke"
            android:layout_width="wrap_content"
            android:layout_height="68dp" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0.05"
        android:baselineAligned="false" >

        <ImageButton
            android:id="@+id/btnJvPrev"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/prev"
            android:text="@string/previous"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnJvShare"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/share"
            android:text="@string/share"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnJvAdd"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/upload"
            android:text="@string/add_joke"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnJvNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/next"
            android:text="@string/next"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llJvAd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_weight="0.01"
        android:background="#ff2222"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>