<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="267dp"
        android:layout_weight="1.10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_weight="0.22"
        android:baselineAligned="false" >

        <ImageButton
            android:id="@+id/btnIpPrev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/prev"
            android:text="@string/previous"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnIpBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/prev"
            android:text="@string/back"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/btnIpPublish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/share"
            android:text="@string/publish"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnIpSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/save"
            android:text="@string/save"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/btnIpNext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/overlay_button"
            android:src="@drawable/next"
            android:text="@string/next"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIpAd"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:background="#ff2222"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>